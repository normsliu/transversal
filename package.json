		"@babel/preset-react": "^7.16.5",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.5.1",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-react": "^7.28.0",
		"html-webpack-plugin": "^5.5.0",
