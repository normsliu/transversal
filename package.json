{
	"name": "transversal",
	"version": "1.0.0",
	"description": "Tool for GraphQL schema generation, server side caching, and template generation",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "NODE_ENV=production node server/server.js",
		"dev": "concurrently \"NODE_ENV=development nodemon server/server.js\" \"NODE_ENV=development webpack-dev-server --open\"",
		"build:prod": "NODE_ENV=production webpack",
		"build:dev": "NODE_ENV=development webpack serve --open",
		"server:run": "nodemon ./server/server.js",
		"format:lint": "npx eslint --ext .jsx --ext .js . --fix",
		"format:pretty": "prettier --write '**/*.{jsx,js,css,html}'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oslabs-beta/transversal.git"
	},
	"author": "Han, Kevin, Norman, and Dan",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/oslabs-beta/transversal/issues"
	},
	"homepage": "https://github.com/oslabs-beta/transversal#readme",
	"dependencies": {
		"@reduxjs/toolkit": "^1.7.1",
		"axios": "^0.24.0",
		"bcryptjs": "^2.4.3",
		"concurrently": "^7.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.2",
		"express-graphql": "^0.12.0",
		"graphql": "^15.8.0",
		"mongoose": "^6.2.1",
		"react": "^17.0.2",
		"react-ace": "^9.5.0",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.2.1",
		"socket.io": "^4.4.1",
		"socket.io-client": "^4.4.1",
		"webpack": "^5.65.0"
	},
